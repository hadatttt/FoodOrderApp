<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được chọn -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Viền khi checkbox được chọn -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white"/> <!-- Nền trắng -->
                    <stroke android:width="2dp" android:color="#000000"/> <!-- Viền đen khi chọn -->
                    <size android:width="24dp" android:height="24dp"/>
                </shape>
            </item>
            <!-- Ẩn background (chỉ giữ viền) -->
            <item>
                <bitmap android:src="@android:color/transparent" android:gravity="center"/>
            </item>
        </layer-list>
    </item>

    <!-- Khi chưa chọn -->
    <item>
        <layer-list>
            <!-- Viền khi checkbox chưa được chọn -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#FFEBE4" /> <!-- Màu nền khi chưa chọn -->
                    <stroke android:width="2dp" android:color="#1E1E1E"/> <!-- Viền xám khi chưa chọn -->
                    <size android:width="24dp" android:height="24dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
