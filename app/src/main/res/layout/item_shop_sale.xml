<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="12dp"
    android:background="@drawable/bg_food_card"
    android:elevation="8dp"
    android:gravity="fill_horizontal">

    <ImageView
        android:id="@+id/imageShop"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza"
        android:background="@drawable/bg_image_round"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/textShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="22sp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đà Nẵng, Việt Nam"
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/Discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giảm 11%"
        android:textColor="#D32F2F"
        android:textSize="14sp"
        android:background="@drawable/bg_discount"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
