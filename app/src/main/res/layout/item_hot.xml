<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/imageFood"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burger" />

    <!-- Phần thông tin chi tiết -->
    <!-- Phần thông tin chi tiết -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!-- Tên món -->
        <TextView
            android:id="@+id/textFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugger khổng lồ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Giá + Đánh giá trên cùng 1 hàng -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ " />
            <TextView
                android:id="@+id/textFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000đ"
                android:textColor="#F40F00" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:layout_marginStart="4dp" />

        </LinearLayout>
        <!-- Nút yêu thích + giỏ hàng -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

<!--            <ImageButton-->
<!--                android:id="@+id/btnFavorite"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:background="@drawable/unlike" />-->

<!--            <ImageButton-->
<!--                android:id="@+id/btnAddToCart"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:background="@drawable/buy" />-->
            <TextView
                android:id="@+id/textSoldAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán: 120"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
