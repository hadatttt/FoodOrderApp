<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_margin="12dp"
    android:background="@drawable/bg_food_card"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/imageFood"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burger"
        android:background="@drawable/bg_image_round"
        android:clipToOutline="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger khổng lồ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF6F00" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ "
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/textFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000đ"
                android:textColor="#FFA000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_lite"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textSoldAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã bán: 120"
            android:textColor="#888888"
            android:textSize="13sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</LinearLayout>
