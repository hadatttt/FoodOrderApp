<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/home_menu_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burger" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugger khổng lồ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/home_menu_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15$"
                android:textColor="#F40F00"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_icon"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/home_menu_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:textSize="16sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/home_menu_item_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán: 120"
                android:textColor="#888888"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>