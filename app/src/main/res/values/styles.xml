        <item name="backgroundTint">@color/yellow</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonLogin" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonFollow" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonCancel" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/button_cancel</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/orange</item>
